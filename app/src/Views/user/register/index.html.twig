{% extends 'base.html.twig' %}

{% block styles %}
    <link rel="stylesheet" href="/assets?css=login">
{% endblock %}

{% block main %}
    <div class="main-login">
        <section>
            <img class="image" src="/assets?svg=animate2" alt="animacao">
        </section>

        <section class="card-login">
            <h2>Register</h2>

            <form action="javascript:void(0)" name="form_register" onsubmit="OBJRegister.sendForm(this)">
                <div class="textfield">
                    <label for="name"></label>
                    <input placeholder="Name" type="text" id="name" name="name" required />
                </div>
                <div class="textfield">
                    <label for="email"></label>
                    <input placeholder="Email" type="email" id="email" name="email" required />
                </div>
                <div class="textfield">
                    <label for="password"></label>
                    <input placeholder="Password" type="password" id="password" name="password" required />
                </div>

                <!-- HIDDEN -->
                <input type="hidden" id="user_type" name="user_type" value="user" required />
                <br>
                <button class="btn-login" type="submit">Register</button>
            </form>

            <p>Go to back home<a href="/">Home</a></p>
        </section>
    </div>
{% endblock %}

{% block scripts %}
    <script src="/assets?js=register"></script>
{% endblock %}
